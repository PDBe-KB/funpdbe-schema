{
  "title": "FunPDBeSchema",
  "type": "object",
  "properties": {

    "data_resource": {
      "type": "string",
      "description": "Name of the database or software"
    },

    "resource_version": {
      "type": "string",
      "description": "Version of the database or software"
    },

    "pdb":{
      "type": "object",
      "properties": {
        "chains": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "chain_id": {
                "type": "string",
                "description": "PDB chain identifier"
              },
              "residues": {
                "type": "array",
                "items": {
                  "type": "object",
                  "properties": {
                    "pdb_res_index": {
                      "type": "integer",
                      "description": "Residue index from the related PDB entry"
                    },
                    "aa_type": {
                      "type": "string",
                      "description": "One letter amino acid code"
                    },
                    "site_data": {
                      "type": "array",
                      "items": {
                        "type": "object",
                        "properties": {
                          "site_id_ref": {
                            "type": "integer",
                            "description": "Reference to site_id"
                          },
                          "confidence": {
                            "type": "float",
                            "description": "Confidence level of the annotation"
                          }
                        }
                      },
                      "minItems": 1,
                      "uniqueItems": true
                    }
                  }
                },
                "minItems": 1
              }
            }
          },
          "minItems": 1,
          "uniqueItems": true
        }
      },
      "sites": {
        "type": "array",
        "items": {
          "type": "object",
          "properties": {
            "site_id": {
              "type": "integer",
              "description": "Site identifier"
            },
            "label_id_ref": {
              "type": "integer",
              "description": "Reference to label"
            }
          }
        },
        "minItems": 1,
        "uniqueItems": true
      }
    },

    "release_date": {
      "type": "string",
      "description": "Release date of the annotation"
    },

    "labels": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "label_id": {
            "type": "integer",
            "description": "Label identifier"
          },
          "label_text": {
            "type": "string",
            "description": "Label description"
          }
        }
      },
      "minItems": 1,
      "uniqueItems": true
    },

    "evidence_ontology": {
      "type": "array",
      "items": {
        "type": "string",
        "description": "Experimental Factor Ontology (EFO) code"
//        "enum": [] - TODO: agree on list of allowed EFO codes
      },
      "uniqueItems": true
    }
  },
  "required": ["data_resource", "pdb", "labels"]
}